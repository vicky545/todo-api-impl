<mule xmlns="http://www.mulesoft.org/schema/mule/core" xmlns:doc="http://www.mulesoft.org/schema/mule/documentation" xmlns:munit="http://www.mulesoft.org/schema/mule/munit" xmlns:munit-tools="http://www.mulesoft.org/schema/mule/munit-tools" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="   http://www.mulesoft.org/schema/mule/core http://www.mulesoft.org/schema/mule/core/current/mule.xsd   http://www.mulesoft.org/schema/mule/munit http://www.mulesoft.org/schema/mule/munit/current/mule-munit.xsd   http://www.mulesoft.org/schema/mule/munit-tools  http://www.mulesoft.org/schema/mule/munit-tools/current/mule-munit-tools.xsd">
    <munit:config name="test-crud-tasks.xml" />
	<munit:test name="success_get_task_by_id_test" description="Get Task by Id Success Test" doc:id="success-test-id">
		<munit:behavior>
			<munit-tools:mock-when doc:name="Mock Request" doc:id="mock-success" processor="db:select">
				<munit-tools:with-attributes>
					<munit-tools:with-attribute whereValue="oqtbkr" attributeName="doc:id" />
				</munit-tools:with-attributes>
				<munit-tools:then-return>
					<munit-tools:payload value="#[[{'id': 16, 'title': 'mytitle', 'description': 'desc', 'completed': 0, 'dueDate': '2023-01-01'}]]" mediaType="application/java" encoding="UTF-8" />
				</munit-tools:then-return>
			</munit-tools:mock-when>
		</munit:behavior>
		<munit:execution>
			<munit:set-event doc:name="Set Event" doc:id="set-event-success">
				<munit:attributes value="#[{uriParams: {'taskId': '16'}}]" />
			</munit:set-event>
			<flow-ref doc:name="Flow-ref to get-task-by-id-subflow" doc:id="call-flow-success" name="get-task-by-id-subflow"/>
		</munit:execution>
		<munit:validation>
			<munit-tools:assert-that doc:name="Assert that payload is not null" doc:id="assert-not-null" expression="#[payload]" is="#[MunitTools::notNullValue()]"/>
			<munit-tools:assert-that doc:name="Assert title" doc:id="assert-title" expression="#[payload[0].title]" is="#[MunitTools::equalTo('mytitle')]"/>
		</munit:validation>
	</munit:test>
	<munit:test name="failure_get_task_by_id_test" description="Get Task by Id Failure Test" doc:id="failure-test-id" expectedErrorType="APP:TASK_NOT_FOUND">
		<munit:behavior>
			<munit-tools:mock-when doc:name="Mock Request" doc:id="mock-failure" processor="db:select">
				<munit-tools:with-attributes>
					<munit-tools:with-attribute whereValue="oqtbkr" attributeName="doc:id" />
				</munit-tools:with-attributes>
				<munit-tools:then-return>
					<munit-tools:payload value="#[[]]" mediaType="application/java" encoding="UTF-8" />
				</munit-tools:then-return>
			</munit-tools:mock-when>
		</munit:behavior>
		<munit:execution>
			<munit:set-event doc:name="Set Event" doc:id="set-event-failure">
				<munit:attributes value="#[{uriParams: {'taskId': '1'}}]" />
			</munit:set-event>
			<flow-ref doc:name="Flow-ref to get-task-by-id-subflow" doc:id="call-flow-failure" name="get-task-by-id-subflow"/>
		</munit:execution>
	</munit:test>
</mule>
